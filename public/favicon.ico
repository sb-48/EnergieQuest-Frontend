  </defs>
  <circle cx="100" cy="100" r="90" fill="url(#circleGrad)" stroke="#1E3A8A" stroke-width="3"/>
  
  <!-- Lightning bolt inside circle - Yellow/Orange/Red -->
  <path d="M 90 50 L 110 50 L 100 80 L 120 80 L 80 150 L 100 120 L 90 120 Z" 
        fill="url(#lightningGrad)" 
        stroke="none"/>
